# Shopee API Configuration
# Điền thông tin từ Shopee Open Platform (https://open.shopee.com)

# Partner credentials
NEXT_PUBLIC_SHOPEE_PARTNER_ID=123456
NEXT_PUBLIC_SHOPEE_PARTNER_KEY=your_partner_key_here

# Shop ID (optional - sẽ được set sau khi authenticate)
NEXT_PUBLIC_SHOPEE_SHOP_ID=

# OAuth Callback URL
NEXT_PUBLIC_SHOPEE_CALLBACK_URL=https://apishopeenextjs.vercel.app/link

# Supabase Configuration
# Lấy từ Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Supabase Service Role Key (for server-side operations)
# QUAN TRỌNG: Không expose key này ở client-side!
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Cron Secret (for Vercel Cron authentication)
# Tạo random string: openssl rand -hex 32
CRON_SECRET=your_cron_secret_here

# Shopee Proxy URL (optional - nếu cần proxy để gọi Shopee API)
SHOPEE_PROXY_URL=
